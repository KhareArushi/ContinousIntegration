
<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/jquery.treetable.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.treetable.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-3 marginBottom10">
                <a href="#" class="logoMain">Advanced Knowledge</a>
            </div>
            <div class="col-sm-7 pull-right text-right">
                <h3 class="text-primary">Project Status</h3>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="width:100%">
                    <li style="color:#fff;font-size:15px">Home</li>
                    <li style="color:#fff" ;font-size:3px">@Html.ActionLink("Configure", "ConfigView", "ManageProjects")</li>
                    <li class="pull-right">@Html.ActionLink("Logout", "Logout", "User", new { @class = "pull-right fontsize20 " })</li>
                    <li class="pull-right fontsize20" style="color:#fff;font-size:15px">
                        @if (Session["LoggedUserName"] != null)
                        {
                            <text>
                                Signed in as @Session["LoggedUserName"].ToString()
                            </text>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>